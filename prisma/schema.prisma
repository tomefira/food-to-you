datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  address       String
  createdAt     DateTime @default(now())
  firstName     String
  lastName      String
  mobileNum     String
  orders        Order[]
}

model Restaurant {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  address       String
  createdAt     DateTime @default(now())
  products      Product[]
  orders        Order[]
}

model Order {
  id              Int      @id @default(autoincrement())
  orderID         String   @unique
  restaurantID    Int
  customerID      Int
  productIDs      String[]
  orderDateTime   DateTime
  deliveryAddress String
  orderStatus     OrderStatus @default(pending)
  deliveryStatus  DeliveryStatus @default(awaitingOrder)
  totalCost       Float

  customer        Customer @relation(fields: [customerID], references: [id])
  restaurant      Restaurant @relation(fields: [restaurantID], references: [id])
}

model Product {
  id            Int      @id @default(autoincrement())
  productID     String   @unique
  productName   String
  productCost   Float
  restaurantID  Int

  restaurant    Restaurant @relation(fields: [restaurantID], references: [id])
}

enum OrderStatus {
  pending
  awaitingPayment
  paid
  submitted
  accepted
  completed
  cancelled
}

enum DeliveryStatus {
  awaitingOrder
  driving
  delivered
}